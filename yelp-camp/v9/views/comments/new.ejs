<%include ../partials/header%>
    <div class="container">
        <h2 class="text-xs-center">Add a new comment to <%= campground.campName %>!</h2>
        <br>
        <div class=" offset-sm-4">
            <form action="/campgrounds/<%=campground._id%>/comments" method="post">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <textarea class="form-control" id="commentText" name="comment[text]" placeholder="text" rows="5"></textarea>
                    </div>
                </div>
                <div class="form-group row "> 
                    <a class="btn btn-primary col-sm-2" href="/campgrounds">Cancel</a>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%include ../partials/footer%>