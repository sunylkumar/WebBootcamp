<%include ../partials/header%>
    <div class="container">
        <h2 class="text-xs-center">Edit Comment!</h2>
        <br>
        <div class=" offset-sm-4">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="post">
                <div class="form-group row">
                    <div class="col-sm-6">
<!--                        <textarea class="form-control" id="commentText" name="comment[text]" value="<%=comment.text%>" rows="5"></textarea>-->
                        <input type="text" class="form-control", name="comment[text]" value="<%=comment.text%>">
                    </div>
                </div>
                <div class="form-group row "> 
                    <a class="btn btn-primary col-sm-2" href="/campgrounds">Cancel</a>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%include ../partials/footer%>