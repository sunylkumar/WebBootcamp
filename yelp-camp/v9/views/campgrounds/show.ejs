<%include ../partials/header%>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Yelp Camp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">info 3</li>
                </div>
                <div class="MAP"></div>
            </div>
            <div class="col-md-9">
                <div class="card"> <img class="cardImage card-img-top" src="<%=campground.campImage%>">
                    <div class="card-block">
                        <h4 class="pull-xs-right">$9/night</h4>
                        <h4><a href="#"><%=campground.campName%></a></h4>
                        <p> <em>submitted by
                           <%= campground.author.username %></em> </p>
                        <p>
                            <%= campground.campDescription%>
                        </p>
                        <%if(currentUser && campground.author.id.equals(currentUser._id)){%> 
                            <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                            <form class="pull-xs-right" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        <%}%>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header text-xs-right">
                        <p> <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add new comment</a> </p>
                    </div>
                    <div class="card-block">
                        <%campground.comments.forEach(function(comment){%>
                            <div class="row">
                                <div class="col-md-12"> <strong><%=comment.author.username%></strong> <span class="pull-xs-right">10 days ago</span>
                                    <p>
                                        <%= comment.text%>
                                    </p>
                                </div>
                            </div>
                            <%}) %>
                    </div>
                </div>
            </div>
        </div>
        <%include ../partials/footer%>