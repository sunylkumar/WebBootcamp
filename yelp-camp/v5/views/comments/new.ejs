<%include ../partials/header%>
    <div class="container">
        <h2 class="text-xs-center">Add a new comment to <%= campground.campName %>!</h2>
        <br>
        <div class=" offset-sm-4">
            <form action="/campgrounds/<%=campground._id%>/comments" method="post">
                <div class="form-group row">
                    <label for="comment" class="col-sm-2 col-form-label">Comment</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="commentText" name="comment[text]" placeholder="text"> </div>
                </div>
                <div class="form-group row">
                    <label for="author" class="col-sm-2 col-form-label">Author</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="commentAuthor" name="comment[author]" placeholder="Author"> </div>
                </div>
                <div class="form-group row "> <a class="btn btn-primary col-sm-2" href="/campgrounds">Cancel</a>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%include ../partials/footer%>